{
  "$schema": "https://vega.github.io/schema/vega/v3.0.json",
  "description": "A specification outline example.",
  "width": 500,
  "height": 300,
  "padding": 5,
  "autosize": "pad",
  "title": {
    "text": "population vs CIA km roads"
  },
  "signals": [
  ],

  "data": [{
  	    "format": {"type": "csv", "parse": "auto"},
    "name": "cia",
    "url": "./data/road-data.csv",
  	 "transform": [
        { "type": "filter", "expr": "datum.population > 300000" },
        { "type": "filter", "expr": "datum.roads < 2000000" },
		{ "type": "filter", "expr": "(datum.population / datum.size) < 650" }
    ,
        {
          "type": "formula",
          "expr": "datum.country",
          "as":   "tooltip"
        }
    ]
  }],
  
  "scales": [
    {
      "name": "roads_x",
      "type": "sqrt",
      "round": true,
      
      "zero": false,
      "domain":  {"data": "cia", "field": "roads"},
      "range" : "width"
    },
    {
      "name": "pop_y",
      "type": "sqrt",   
      
      "range": "height",
      "nice": true,
      "zero": true,
      "domain": {"data": "cia", "field": "population"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": ["Africa","Asia","Europe","North-America","South-America","Oceania"]
    }
  ],
  "projections": [],
   "axes": [
    {
      "scale": "roads_x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 5,
      "title": "Km"
    },
    {
      "scale": "pop_y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "population"
    }
  ],

  "legends": [],
   "marks": [
    {
      "name": "roads_pop",
      "type": "symbol",
      "from": {"data": "cia"},
      "encode": {
         "enter": {
          "size": {"value": 50},
          "tooltip": {"field": "tooltip"}
        },
        "update": {
          "x": {"scale": "roads_x", "field": "roads"},
          "y": {"scale": "pop_y", "field": "population"},
          "shape": {"value": "circle"},
          "strokeWidth": {"value": 2},
          "opacity": {"value": 0.8},          
          "fill": {"scale": "color", "field": "continent"}
        }
      }
    }
  ]
}
